<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>news</title>
    <% include components/css.inc.ejs%>
</head>
<body>
<% include components/top.inc.ejs %>
<div class="page">
    <% include components/left.inc.ejs %>
    <div class="content-wrap" >
        <div>
            <form action="?" method="post" enctype="multipart/form-data">
                标题：<input type="text" name="title"><br/>
                大图：<input type="file" name="pic_src"><br/>
                摘要：<textarea name="summary"></textarea><br/>
                内容：<textarea name="content"></textarea><br/>
                作者：<input type="text" name="author"><br/>
                发布时间：<input type="text" name="post_time"><br/>
                浏览人数：<input type="text" name="n_views"><br/>
                <input type="submit" value="提交">
            </form>
        </div>
        <table border="1" width="100%">
            <thead>
            <tr>
                <th>ID</th>
                <th>标题</th>
                <th>大图</th>
                <th>摘要</th>
                <th>内容</th>
                <th>作者</th>
                <th>发布时间</th>
                <th>浏览人数</th>
                <th>操作</th>
            </tr>
            </thead>
            <tbody>
            <% for(var i=0,len=blogs.length;i<len;i++){%>
            <tr>
                <td><%= blogs[i].ID %></td>
                <td><%= blogs[i].title %></td>
                <td><img src="/upload/<%= blogs[i].pic_src%>" width="50" height="50"></td>
                <td><%= blogs[i].summary %></td>
                <td><%= blogs[i].content%></td>
                <td><%= blogs[i].author %></td>
                <td><%= blogs[i].post_time%></td>
                <td><%= blogs[i].n_views %></td>
                <td>
                    <a href="?act=update&id=<%= blogs[i].ID%>">修改</a>
                    <a href="?act=delete&id=<%= blogs[i].ID%>" onclick="return confirm('你真的要删除该条记录吗？');">删除</a>
                </td>
            </tr>
            <% }%>
            </tbody>
        </table>
        <% if(typeof updateBlog != 'undefined'){ %>
        <div>
            <form action="?" method="post" enctype="multipart/form-data">
                <input type="hidden" name="update_id" value="<%= updateBlog.ID%>">
                标题：<input type="text" name="title" value="<%= updateBlog.title%>"><br/>
                大图：<input type="file" name="pic_src"><br/>
                摘要：<textarea name="summary"><%= updateBlog.summary%></textarea><br/>
                内容：<textarea name="content"><%= updateBlog.content%></textarea><br/>
                作者：<input type="text" name="author" value="<%= updateBlog.author%>"><br/>
                发布时间：<input type="text" name="post_time" value="<%= updateBlog.post_time%>"><br/>
                浏览人数：<input type="text" name="n_views" value="<%= updateBlog.n_views%>"><br/>
                <input type="submit" value="提交">
            </form>
        </div>
        <% } %>
    </div>
</div>
</body>
</html>
